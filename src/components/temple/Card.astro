---
import type { CardProps } from "@interfaces/data";

interface Props extends CardProps {
  title?: string;
}

const { class: className = "", title = "~/content.md" } = Astro.props;
---

<div class={`bg-white border border-gray-200 rounded-md shadow-none w-full ${className} overflow-hidden`}>
  <div class="flex items-center gap-2 px-3 py-2 bg-gray-50 border-b border-gray-200">
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-[#FF5F56] border border-[#E0443E]"></div>
      <div class="w-3 h-3 rounded-full bg-[#FFBD2E] border border-[#DEA123]"></div>
      <div class="w-3 h-3 rounded-full bg-[#27C93F] border border-[#1AAB29]"></div>
    </div>
    <div class="ml-auto mr-auto text-xs font-mono text-gray-500 select-none opacity-70">
      {title}
    </div>
  </div>
  <div class="bg-white">
    <slot />
  </div>
</div>
